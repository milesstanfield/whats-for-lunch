= render 'shared/sub_nav'
.m-bg-default.height-100.width-100
  .container
    .row
      .col-lg-12
        %h3= 'Restaurants'
      .col-lg-12
        - @recommendations.each do |value, restaurants|
          - restaurants.each do |restaurant|
            .relative.l-card.border-box.inline-block.v-align-top
              .l-square-parent
                .l-sized-child
                  .l-card-padding.height-100.width-100
                    .m-bg-white.height-100.width-100.l-inner-card-padding
                      %h3= restaurant.name
                      %p= value
